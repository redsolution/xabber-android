<resources>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#000</item>
    </style>

    <style name="QRCodeLoginButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:radius">40dp</item>
    </style>
    <style name="QRCodeLoginButtonRippleSmall" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:radius">1dp</item>
    </style>


    <style name="AddAccountButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:minHeight">30dp</item>
    </style>

    <style name="ChatHeader" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChatHeader.Delay">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChatText" parent="@android:style/TextAppearance">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ChatText.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChatText.Normal">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ChatText.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChatText.XLarge">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ChatInfo">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ChatInfo.Warning">
        <item name="android:textColor">#D00000</item>
    </style>

    <style name="OccupantList" parent="@android:style/TextAppearance" />
    <style name="OccupantList.Moderator">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="OccupantList.Participant">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="OccupantList.Visitor">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="RedCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/red_700</item>
    </style>

    <style name="BlueCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/account_register_blue</item>
        <item name="colorControlNormal">@color/grey_700</item>
    </style>

    <style name="WhiteSwitchStyle">
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="RedSwitchStyle">
        <item name="colorControlActivated">@color/red_700</item>
    </style>

    <style name="RedButton" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/red_700</item>
    </style>

    <style name="BlueButton" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/account_register_blue</item>
    </style>

    <style name="WhiteButton" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CoralButton" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/patreon_coral</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/red_700</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="colorControlActivated">@color/red_700</item>
        <item name="colorControlHighlight">@color/red_700</item>
    </style>

</resources>