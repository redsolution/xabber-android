<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_title_expanded_new"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="?attr/bottom_navigation_background"
    android:fitsSystemWindows="true">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/backgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/about_backdrop"
            tools:srcCompat="@color/white" />

        <ImageView
            android:id="@+id/backgroundTintUpper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:visibility="invisible"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="1"
            app:srcCompat="@drawable/contact_image_gradient_dark_tint_down"
            tools:visibility="invisible" />

        <ImageView
            android:id="@+id/backgroundTintLower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/contact_image_gradient_dark_tint"
            tools:visibility="invisible" />

        <include
            layout="@layout/avatar_view_extra_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="66dp" />


    </FrameLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        android:theme="@style/ThemeBorderlessVcard"

        app:popupTheme="?attr/toolbar_popup_theme">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/generate_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="3dp"
                app:srcCompat="@drawable/image_qr_code_generate"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="12dp" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/frameLayout"
        android:clickable="false">

        <LinearLayout
            android:id="@+id/name_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="?attr/actionBarSize"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="4dp"
                    android:text="Lorem Ipsum"
                    android:textColor="?attr/contact_list_contact_name_text_color"
                    android:textSize="30sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false">

                    <ImageView
                        android:id="@+id/ivStatus"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_status" />

                    <ImageView
                        android:id="@+id/ivStatusGroupchat"
                        android:layout_width="18dp"
                        android:layout_height="18dp"

                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="15dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_groupchat_14_border"
                        tools:visibility="visible" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Lorem ipsum dolor sit amet"
                android:visibility="gone" />


            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="50dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:gravity="center_vertical"
                android:paddingTop="3dp"
                android:paddingBottom="9dp"
                android:text="Lorem ipsum dolor sit amet"
                android:textSize="16sp" />
        </LinearLayout>

        <com.xabber.android.ui.widget.CustomNestedScrollView
            android:id="@+id/scroll_v_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/scroll_v_card_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="81dp">

                <include layout="@layout/contact_bar_auto_sizing" />

                <FrameLayout
                    android:id="@+id/scrollable_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/contact_list_background">

                </FrameLayout>

            </LinearLayout>
        </com.xabber.android.ui.widget.CustomNestedScrollView>

        <!--<View
            android:id="@+id/divider"
            android:layout_marginTop="?attr/actionBarSize"
            android:visibility="invisible" />-->
    </RelativeLayout>




</RelativeLayout>