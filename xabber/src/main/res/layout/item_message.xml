<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/item_incoming_message">

    <TextView
        android:id="@+id/message_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nickname@example.com"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/message_not_decrypted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otr_not_decrypted_message"
        android:visibility="gone"
        android:textStyle="italic"
        />

    <github.ankushsachdeva.emojicon.EmojiconTextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="160dp"
        android:autoLink="all"
        android:text="Some text\n line \nrgregrere" />

    <TextView
        android:id="@+id/message_text_for_filenames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="160dp"
        android:text="some_file_name.txt"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/message_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:adjustViewBounds="true"
        />

</merge>