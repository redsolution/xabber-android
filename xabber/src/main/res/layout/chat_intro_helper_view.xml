    <LinearLayout
        android:id="@+id/layout_encryption_otr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <ImageButton
            android:id="@+id/iv_encryption_ort"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_security_locked" />

        <TextView
            android:id="@+id/tv_encryption_otr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:text="Enable End-to-End Encryption (OTR) to ensure privacy of your communications. Always check the identity of your chat partner!"
            android:textAppearance="@style/ChatText.Large"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:lineHeight="18dp" />
    </LinearLayout>


</LinearLayout>