<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_intro_background"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="16dp"
    android:paddingRight="12dp"
    android:paddingBottom="12dp"
    app:layout_anchorGravity="center">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="6dp"
        app:srcCompat="@drawable/ic_chats_list_new" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="6dp"
            android:text="Regular Chat"
            android:textAppearance="@style/ChatText.Large"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_encryption"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <ImageButton
            android:id="@+id/iv_encryption"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_shield_warning" />

        <TextView
            android:id="@+id/tv_encryption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:text="Messages in this chat are not encrypted. This allows easy device sync and server-side message search, but adds privacy risks."
            android:textAppearance="@style/ChatText.Large"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:lineHeight="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_archive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <ImageButton
            android:id="@+id/iv_archive"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_server_network" />

        <TextView
            android:id="@+id/tv_archive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:text="Most modern servers store chat history in server database. When you clear chat history on a client device, it might stay there."
            android:textAppearance="@style/ChatText.Large"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:lineHeight="18dp" />
    </LinearLayout>

