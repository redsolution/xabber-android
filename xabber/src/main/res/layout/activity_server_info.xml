<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_server_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xabber.android.ui.activity.ServerInfoActivity"
    android:background="?attr/contact_list_background">

    <include layout="@layout/toolbar_default" />

    <androidx.recyclerview.widget.RecyclerView
        android:padding="16dp"
        android:clipToPadding="false"
        android:id="@+id/server_info_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_default"
        />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/server_info_progress_bar" />


</RelativeLayout>
