<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/bars_color">

    <ImageView
        android:id="@+id/pinned_message_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_pin_grey_24dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/pinned_message_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textSize="12sp"
        android:paddingTop="6dp"
        tools:text="nickname@example.com"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/pinned_message_avatar"/>

    <TextView
        android:id="@+id/pinned_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Some text"
        android:textColor="@color/black_text"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:autoLink="all"
        android:maxLines="1"
        android:layout_toRightOf="@id/pinned_message_avatar"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/pinned_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/pinned_message_header"
        android:singleLine="true"
        android:textColor="@color/grey_600"
        android:textSize="10sp"
        tools:text="11:40" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pinned_message_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/standard_clear_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"/>


</RelativeLayout>