<?xml version="1.0" encoding="utf-8"?>
<com.xabber.android.ui.widget.ChatListItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:clipToPadding="false"
    android:background="@drawable/ripple_chat_list_item">

    <View
        android:id="@+id/accountColorIndicatorBack"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/amber_700" />

    <View
        android:id="@+id/accountColorIndicator"
        android:layout_marginTop="1px"
        android:layout_marginBottom="1px"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/amber_700" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:civ_circle_background_color="@color/white"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        tools:src="@tools:sample/avatars"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_status_combined"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawablePadding="4dp"
        android:textSize="14sp"
        android:textColor="?attr/contact_list_contact_name_text_color"
        android:fontFamily="sans-serif-medium"
        android:text="Erik Walton" />

    <github.ankushsachdeva.emojicon.EmojiconTextView
        android:id="@+id/tvMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="?attr/contact_list_contact_second_line_text_color"
        android:text="Hello. How are you?" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="12:30" />

    <ImageView
        android:id="@+id/ivMessageStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:srcCompat="@drawable/ic_message_delivered_14dp" />

    <TextView
        android:id="@+id/tvUnreadCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="1dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:background="@drawable/rounded_background_green"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="1"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

</com.xabber.android.ui.widget.ChatListItemLayout>
