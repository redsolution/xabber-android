<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top = "2dp"
        android:left = "2dp"
        android:right = "2dp"
        android:bottom = "2dp">
        <shape
            android:shape="oval">
            <solid
                android:color="#FFFFA000"/>
            <stroke
                android:width="@dimen/account_status_border"
                android:color="?attr/contact_list_contact_background"/>
            <size
                android:width="@dimen/account_status"
                android:height="@dimen/account_status"/>
        </shape>
    </item>
</layer-list>