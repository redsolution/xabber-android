<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:useDefaultMargins="true"
    android:background="?attr/bars_color">


    <RelativeLayout
        android:id="@+id/show_chats_button"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="@color/transparent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/show_chats_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_chats_list_new"
            android:background="@color/transparent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/unread_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/show_chats_image"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:paddingTop="1dp"
            android:paddingBottom="2dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:background="@drawable/rounded_background_green_border"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="1"
            android:visibility="gone"
            />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/show_calls_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_calls_list_new"
        android:background="@color/transparent"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/show_contacts_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_contacts_list_new"
        android:background="@color/transparent"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/show_discover_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_search_white_24dp"
        android:background="@color/transparent"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/show_settings_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_menu_new"
        android:background="@color/transparent"
        android:layout_weight="1"/>


</LinearLayout>